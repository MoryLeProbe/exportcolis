{% extends 'base.html.twig' %}

{% block title %}Nouveau Paiement{% endblock %}

{% block body %}
<h2 class="mb-4">Créer un Paiement pour l'Expédition {{ paiement.expedition.numero }}</h2>

<div class="card p-4 shadow-sm mb-4">
    <h5>Détails de l'Expédition</h5>
    <p><strong>Numéro :</strong> {{ paiement.expedition.numero }}</p>
    <p><strong>Prix :</strong> {{ paiement.expedition.prix }} F CFA</p>
    <p><strong>Reste à payer :</strong> {{ paiement.expedition.resteAPayer() }} F CFA</p>
</div>

{{ form_start(form) }}
    <div class="card p-4 shadow-sm">
        {{ form_widget(form) }}
        <button class="btn btn-success mt-3">
            <i class="bi bi-check-circle"></i> Enregistrer
        </button>
        <a href="{{ path('app_expedition_show', {id: paiement.expedition.id}) }}" class="btn btn-secondary mt-3">Retour</a>
    </div>
{{ form_end(form) }}

{% endblock %}
