{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
<h2 class="mb-4">Liste des Clients</h2>

<a href="{{ path('app_client_new') }}" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Nouveau Client
</a>

<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Téléphone</th>
            <th>Adresse</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for client in clients %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ client.nom }}</td>
            <td>{{ client.telephone }}</td>
            <td>{{ client.adresse }}</td>
            <td>
                <a href="{{ path('app_client_show', {id: client.id}) }}" class="btn btn-sm btn-info">
                    <i class="bi bi-eye"></i>
                </a>
                <a href="{{ path('app_client_edit', {id: client.id}) }}" class="btn btn-sm btn-warning">
                    <i class="bi bi-pencil"></i>
                </a>

                <form action="{{ path('app_client_delete', {id: client.id}) }}" method="post" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                    <button class="btn btn-sm btn-danger" onclick="return confirm('Supprimer ?')">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>

            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6" class="text-center text-muted">Aucun client trouvé.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
