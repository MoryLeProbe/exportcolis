{% extends 'base.html.twig' %}

{% block title %}Client {{ client.nom }}{% endblock %}

{% block body %}
<h2 class="mb-4">Détails du Client</h2>

<div class="card p-4 shadow-sm">
    <p><strong>Nom :</strong> {{ client.nom }}</p>
    <p><strong>Téléphone :</strong> {{ client.telephone }}</p>
    <p><strong>Adresse :</strong> {{ client.adresse }}</p>

    <a href="{{ path('app_client_edit', {id: client.id}) }}" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Modifier
    </a>
    <a href="{{ path('app_client_index') }}" class="btn btn-secondary">Retour</a>
</div>

<h3 class="mt-4">Colis associés</h3>

{% if client.colis|length > 0 %}
<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th>Numéro</th>
            <th>Type</th>
            <th>Poids</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for coli in client.colis %}
        <tr>
            <td>{{ coli.numero }}</td>
            <td>{{ coli.type }}</td>
            <td>{{ coli.poids }} kg</td>
            <td>{{ coli.statut }}</td>
            <td>
                <a href="{{ path('app_colis_show', {id: coli.id}) }}" class="btn btn-sm btn-info">
                    <i class="bi bi-eye"></i> Voir
                </a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<p class="text-muted">Aucun colis associé à ce client.</p>
{% endif %}

{% endblock %}
