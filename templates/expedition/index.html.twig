{% extends 'base.html.twig' %}

{% block title %}Expeditions{% endblock %}

{% block body %}
    <h2 class="mb-4">Liste des Expeditions</h2>

    <div class="row mb-3">
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <input type="text" name="search" class="form-control me-2" placeholder="Rechercher par numéro, type ou colis associé..." value="{{ search }}">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-search"></i> Rechercher
                </button>
            </form>
        </div>
        <div class="col-md-6 text-end">
            <a href="{{ path('app_expedition_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nouvelle Expédition
            </a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Numero</th>
                <th>Type d'Expédition</th>
                <th>Colis associés</th>
                <th>Coût d'expédition</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for expedition in expeditions %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ expedition.numero }}</td>
                <td>{{ expedition.type }}</td>
                <td>
                    {% for coli in expedition.colis %}
                        <div class="mb-1">
                            <strong>{{ coli.numero }}</strong> - {{ coli.type }} ({{ coli.poids }} kg)
                        </div>
                    {% else %}
                        <span class="text-muted">Aucun colis associé</span>
                    {% endfor %}
                </td>
                <td>{{ expedition.prix }}</td>
                <td>
                <a href="{{ path('app_expedition_show', {id: expedition.id}) }}" class="btn btn-sm btn-info">
                    <i class="bi bi-eye"></i>
                </a>
                <a href="{{ path('app_expedition_edit', {id: expedition.id}) }}" class="btn btn-sm btn-warning">
                    <i class="bi bi-pencil"></i>
                </a>

                <form action="{{ path('app_expedition_delete', {id: expedition.id}) }}" method="post" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ expedition.id) }}">
                    <button class="btn btn-sm btn-danger" onclick="return confirm('Supprimer ?')">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>

            </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9" class="text-center text-muted">Aucune expédition trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
