{% extends 'base.html.twig' %}

{% block title %}Destinataires{% endblock %}

{% block body %}
    <h2 class="mb-4">Liste des Destinataires</h2>

<a href="{{ path('app_destinataire_new') }}" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Nouveau Destinataire
</a>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Code Postal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destinataire in destinataires %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ destinataire.nom }}</td>
                <td>{{ destinataire.telephone }}</td>
                <td>{{ destinataire.adresse }}</td>
                <td>{{ destinataire.ville }}</td>
                <td>{{ destinataire.pays }}</td>
                <td>{{ destinataire.codePostal }}</td>
                <td>
                <a href="{{ path('app_destinataire_show', {id: destinataire.id}) }}" class="btn btn-sm btn-info">
                    <i class="bi bi-eye"></i>
                </a>
                <a href="{{ path('app_destinataire_edit', {id: destinataire.id}) }}" class="btn btn-sm btn-warning">
                    <i class="bi bi-pencil"></i>
                </a>

                <form action="{{ path('app_destinataire_delete', {id: destinataire.id}) }}" method="post" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ destinataire.id) }}">
                    <button class="btn btn-sm btn-danger" onclick="return confirm('Supprimer ?')">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>

            </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-center text-muted">Aucun destinataire trouvÃ©.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
