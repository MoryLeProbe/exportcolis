{% extends 'base.html.twig' %}

{% block title %}Destinataire {{ destinataire.nom }}{% endblock %}

{% block body %}
<h2 class="mb-4">Détails du Destinataire</h2>

<div class="card p-4 shadow-sm">
    <p><strong>Nom :</strong> {{ destinataire.nom }}</p>
    <p><strong>Téléphone :</strong> {{ destinataire.telephone }}</p>
    <p><strong>Adresse :</strong> {{ destinataire.adresse }}</p>
    <p><strong>Ville :</strong> {{ destinataire.ville }}</p>
    <p><strong>Pays :</strong> {{ destinataire.pays }}</p>
    <p><strong>Code Postal :</strong> {{ destinataire.codePostal }}</p>

    <a href="{{ path('app_destinataire_edit', {id: destinataire.id}) }}" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Modifier
    </a>
    <a href="{{ path('app_destinataire_index') }}" class="btn btn-secondary">Retour</a>
</div>

{% endblock %}
