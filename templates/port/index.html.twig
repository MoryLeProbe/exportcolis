{% extends 'base.html.twig' %}

{% block title %}Ports{% endblock %}

{% block body %}
    <h2 class="mb-4">Liste des Ports</h2>

    <a href="{{ path('app_port_new') }}" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Nouveau Port
    </a>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for port in ports %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ port.nom }}</td>
                <td>{{ port.pays }}</td>
                <td>
                    <a href="{{ path('app_port_show', {id: port.id}) }}" class="btn btn-sm btn-info">
                    <i class="bi bi-eye"></i>
                </a>
                <a href="{{ path('app_port_edit', {id: port.id}) }}" class="btn btn-sm btn-warning">
                    <i class="bi bi-pencil"></i>
                </a>

                <form action="{{ path('app_port_delete', {id: port.id}) }}" method="post" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ port.id) }}">
                    <button class="btn btn-sm btn-danger" onclick="return confirm('Supprimer ?')">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center text-muted">Aucun port trouv√©.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
