{% extends 'base.html.twig' %}

{% block title %}Tarifs de Ports{% endblock %}

{% block body %}
    <h2 class="mb-4">Liste des Tarifs de Ports</h2>

    <a href="{{ path('app_tarif_port_new') }}" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Nouveau Tarif de Port
    </a>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Type de Transport</th>
                <th>Port de Départ</th>
                <th>Port d'Arrivée</th>
                <th>Prix/Kg</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarif_port in tarif_ports %}
            <tr>
                <td>{{ tarif_port.id }}</td>
                <td>{{ tarif_port.typeTransport }}</td>
                <td>{{ tarif_port.portDepart.nom }}</td>
                <td>{{ tarif_port.portArrivee.nom }}</td>
                <td>{{ tarif_port.prixKg }}</td>
                <td>
                    <a href="{{ path('app_tarif_port_show', {id: tarif_port.id}) }}" class="btn btn-sm btn-info">
                    <i class="bi bi-eye"></i>
                </a>
                <a href="{{ path('app_tarif_port_edit', {id: tarif_port.id}) }}" class="btn btn-sm btn-warning">
                    <i class="bi bi-pencil"></i>
                </a>

                <form action="{{ path('app_tarif_port_delete', {id: tarif_port.id}) }}" method="post" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tarif_port.id) }}">
                    <button class="btn btn-sm btn-danger" onclick="return confirm('Supprimer ?')">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center text-muted">Aucun tarif de port trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
