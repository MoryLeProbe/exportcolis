{% extends 'base.html.twig' %}

{% block title %}Colis{% endblock %}

{% block body %}
    <h2 class="mb-4">Liste des Colis</h2>

    <div class="row mb-3">
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <input type="text" name="search" class="form-control me-2" placeholder="Rechercher par numéro, type, poids ou client..." value="{{ search }}">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-search"></i> Rechercher
                </button>
            </form>
        </div>
        <div class="col-md-6 text-end">
            <a href="{{ path('app_colis_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nouveau Colis
            </a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Numero</th>
                <th>Type</th>
                <th>Poids</th>
                <th>Client</th>
                <th>Date de création</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coli in colis %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ coli.numero }}</td>
                <td>{{ coli.type }}</td>
                <td>{{ coli.poids }}</td>
                <td> {{ coli.client.nom }} </td>
                <td>{{ coli.createdAt ? coli.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>
                <a href="{{ path('app_colis_show', {id: coli.id}) }}" class="btn btn-sm btn-info">
                    <i class="bi bi-eye"></i>
                </a>
                <a href="{{ path('app_colis_edit', {id: coli.id}) }}" class="btn btn-sm btn-warning">
                    <i class="bi bi-pencil"></i>
                </a>

                <form action="{{ path('app_colis_delete', {id: coli.id}) }}" method="post" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ coli.id) }}">
                    <button class="btn btn-sm btn-danger" onclick="return confirm('Supprimer ?')">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>

            </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11" class="text-center text-muted">Aucun colis trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
