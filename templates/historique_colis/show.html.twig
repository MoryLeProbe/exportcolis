{% extends 'base.html.twig' %}

{% block title %}Historique {{ historique_coli.id }}{% endblock %}

{% block body %}
<h2 class="mb-4">Détails de l'Expédition</h2>

<div class="card p-4 shadow-sm">
    <p><strong>Id:</strong> {{ historique_coli.id }}</p>
    <p><strong>Statut:</strong> {{ historique_coli.statut }}</p>
    <p><strong>Description:</strong> {{ historique_coli.description }}</p>
    <p><strong>Date de Mise à Jour:</strong> {{ historique_coli.dateAction ? historique_coli.dateAction|date('d-m-Y H:i:s') : 'N/A' }}</p>

    <a href="{{ path('app_historique_colis_edit', {id: historique_coli.id}) }}" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Modifier
    </a>
    <a href="{{ path('app_historique_colis_index') }}" class="btn btn-secondary">Retour</a>
</div>

{% endblock %}
