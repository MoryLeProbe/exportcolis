{% extends 'base.html.twig' %}

{% block title %}Historique Colis{% endblock %}

{% block body %}
    <h2 class="mb-4">Historique des Colis</h2>

    <a href="{{ path('app_historique_colis_new') }}" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Nouveau Historique Colis
    </a>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Statut</th>
                <th>Coli</th>
                <th>Description</th>
                <th>DateAction</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for historique_coli in historique_colis %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ historique_coli.statut }}</td>
                <td>{{ historique_coli.colis.numero }}</td>
                <td>{{ historique_coli.description }}</td>
                <td>{{ historique_coli.dateAction ? historique_coli.dateAction|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_historique_colis_show', {id: historique_coli.id}) }}" class="btn btn-sm btn-info">
                    <i class="bi bi-eye"></i>
                </a>
                <a href="{{ path('app_historique_colis_edit', {id: historique_coli.id}) }}" class="btn btn-sm btn-warning">
                    <i class="bi bi-pencil"></i>
                </a>

                <form action="{{ path('app_historique_colis_delete', {id: historique_coli.id}) }}" method="post" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ historique_coli.id) }}">
                    <button class="btn btn-sm btn-danger" onclick="return confirm('Supprimer ?')">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center text-muted">Aucun historique coli trouv√©.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
